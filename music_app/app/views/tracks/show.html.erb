<p id="notice"><%= notice %></p>
  
    <%= @track.user.name %>'s tracks<br>
    Track name: <%= @track.name %> <br>
    Description: <%= @track.description %> <br>
    Last updated: <%= time_ago_in_words(@track.updated_at) %> ago<br><br>

    <%= render @comments %>
    
    <h2>Add a comment:</h2>
    <%= form_for([@track, @comment]) do |f| %>
      <div class="field">
        <%= f.label :body %><br />
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>

    Track: <br> <%= audio_tag @track.music_file.url, autoplay: true, controls: true %>
    

    
    

