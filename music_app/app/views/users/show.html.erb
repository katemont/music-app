<p id="notice"><%= notice %></p>

<section class="profile theme-two">
  <h1><%= @user.name %></h1>
  <p>
    <b>Role:</b>
    <%= @user.role %>
  </p>
  <p>
    <b>Email:</b>
    <%= @user.email %>
  </p>

  <p>Your music:</p>
    <% @user.tracks.each do |track| %>
    <ul><li><%= track.name %></li></ul>
    <% end %>
  <br>

  <p>Last updated: <%= time_ago_in_words(@user.updated_at) %> ago
    </p>

  <%= link_to 'Tracks', tracks_path %> |
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
</section> 