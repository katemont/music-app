<div class="container">
<h2>Log in</h2>

<%= form_tag sessions_path do %>
  <div class="form-field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
</div>
  <div class="form-field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
</div>
  <div class="actions">
    <%= submit_tag "Log in", class: "btn btn-primary" %>
  </div>

<% end %>

</div>
